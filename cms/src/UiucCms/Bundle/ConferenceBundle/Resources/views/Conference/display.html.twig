{% extends 'UiucCmsConferenceBundle::layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="page-header" style="text-align:center">
        <h1>
            Details for {{ conference.name }}
        </h1>
    </div>
    <p class="lead">
        Year: {{ conference.year }} <br>
        City: {{ conference.city }} <br>
        Registration Begins: {{ conference.registerBeginDate|date('Y-m-d h:i:s') }} <br>
        Registration Ends: {{ conference.registerEndDate|date('Y-m-d h:i:s') }} <br>
    </p>
    <p>
        {% if enrollment %}
            You have enrolled in this conference at {{ enrollment.enrollmentDate|date('Y-m-d h:i:s') }}.
            <div class="panel panel-default" style="text-align: center;">
                <div class="panel-heading"> Food Option </div>
                <div class="panel-body">{{ food }}</div>
                <div class="panel-heading"> Abstract </div>
                <div class="panel-body">{{ abstract }}</div>
            </div>
        {% else %}
            <li><a href="{{ path('uiuc_cms_conference_enrollInfo', {'id': conference.id }) }}">Enroll in this conference</a>
        {% endif %}
        
        <br>
        <li><a href="{{ path('uiuc_cms_conference_homepage') }}">Back to listings</li>
    </p>
</div>
{% endblock content %}
