{% extends 'UiucCmsConferenceBundle::layout_nav.html.twig' %}

{% block content %}
<div class="container">
    <div class="page-header" style="text-align:left">
        <h1>
            Details for {{ conference.getName() }}
        </h1>
    </div>
    <!-- TODO: Refactor this section in a template all similar pages can use -->
    <p class="lead">
        Year: {{ conference.getYear() }} <br>
        City: {{ conference.getCity() }} <br>
        Registery Begins: {{ conference.getRegisterBeginDate().format('Y-m-d:i:s') }} <br>
        Registery Ends: {{ conference.getRegisterEndDate().format('Y-m-d:i:s') }} <br>
    </p>
    <p>
        <h2>
            Attendees:
        </h2>
        {% if attendees is empty %}
            No one has enrolled for this conference yet.
        {% else %}
            {% for attendee in attendees %}
                <p> {{ attendee.getFirstName() }} {{ attendee.getLastName() }}
            {% endfor %}
        {% endif %}
    </p>
    <p>
        <li><a href="{{ path('uiuc_cms_conference_view_created') }}">Back to your conferences</li>
    </p>
</div>
{% endblock content %}
