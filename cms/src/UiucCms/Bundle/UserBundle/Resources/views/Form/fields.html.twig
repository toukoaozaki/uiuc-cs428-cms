{# src/UiucCms/Bundle/UserBundle/Resources/views/Form/fields.html.twig #}
{% block form_row %}
{% spaceless %}
    <div class="form_row">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_widget_simple %}
    {% set type = type|default('text') %}
    <input class="form-control" type="{{ type }}"
        {{ block('widget_attributes') }}
            {% if value is not empty %}value="{{ value }}"
        {% endif %}
    />
{% endblock form_widget_simple %}
