{% extends "FOSUserBundle::layout.html.twig" %}

{% block navigation %}
{% endblock navigation %}

{% block fos_user_content %}
<div class="container" style="text-align:center; width:300px; margin-top:13%; ">
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="POST">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <input class="form-control" type="text" id="username" name="_username"
            style="margin-bottom: 5px;"
            placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle')|trim(':') }}"
            value="{{ last_username }}" required autofocus />

        <input class="form-control" type="password" id="password" name="_password"
            style="margin-bottom: 5px;"
            placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle')|trim(':') }}"
            required />

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>

        <button type="submit" class="btn btn-default" id="_submit" name="_submit">
            {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
        </button>
        <div>
            <a class="btn" href="{{ path('fos_user_resetting_request') }}">
                {{ 'form.security.login.reset_password'|trans }}
            </a>
            <a class="btn" href="{{ path('fos_user_registration_register') }}">
                {{ 'form.security.login.register_account'|trans }}
            </a>
        </div>
    </form>
</div>
{% endblock fos_user_content %}
